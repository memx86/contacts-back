{
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "https://memx86-contacts.herokuapp.com/api"
    }
  ],
  "info": {
    "description": "Contacts API developed by memx86",
    "version": "1.0.2",
    "title": "Contacts API",
    "contact": {
      "email": "memx86@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "Operations available for users"
    },
    {
      "name": "contacts",
      "description": "Operations available for contacts"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "tags": ["users"],
        "summary": "create user",
        "operationId": "createUser",
        "description": "Create new user\n",
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "409": {
            "$ref": "#/components/responses/RegistrationError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              }
            }
          },
          "description": "User to create"
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["users"],
        "summary": "log in",
        "operationId": "loginUser",
        "description": "Log in user\n",
        "responses": {
          "200": {
            "description": "User logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "JWT token"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error | Email or password is wrong | Please verify your email"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogIn"
              }
            }
          },
          "description": "user object"
        }
      }
    },
    "/users/verify/{verificationToken}": {
      "get": {
        "tags": ["users"],
        "summary": "verify user",
        "operationId": "verifyUser",
        "description": "Provide verification token to get activation link via email\n",
        "parameters": [
          {
            "in": "path",
            "name": "verificationToken",
            "description": "user's verification token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Verification successful"
          },
          "400": {
            "$ref": "#/components/responses/VerificationError"
          },
          "404": {
            "$ref": "#/components/responses/UserNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/users/verify": {
      "post": {
        "tags": ["users"],
        "summary": "reverify user",
        "operationId": "reVerifyUser",
        "description": "Provide  email to resend verification link\n",
        "responses": {
          "200": {
            "description": "Verification email sent"
          },
          "404": {
            "$ref": "#/components/responses/UserNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Verify"
              }
            }
          },
          "description": "user's email to reverify"
        }
      }
    },
    "/users/logout": {
      "get": {
        "tags": ["users"],
        "summary": "log user out",
        "operationId": "logoutUser",
        "description": "Logout user\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "successfull logout"
          },
          "400": {
            "$ref": "#/components/responses/TokenTypeError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/users/current": {
      "get": {
        "tags": ["users"],
        "summary": "current user info",
        "operationId": "currentUser",
        "description": "Get current user information\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "current user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/TokenTypeError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/users/": {
      "patch": {
        "tags": ["users"],
        "summary": "change user's subscription",
        "operationId": "changeUserSubscription",
        "description": "Change user's subscription field\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "update successfull",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Wrong token type | Validation error"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Subscription"
              }
            }
          },
          "description": "Updated subscription field"
        }
      }
    },
    "/users/avatars": {
      "patch": {
        "tags": ["users"],
        "summary": "upload an avatar",
        "operationId": "changeUserAvatar",
        "description": "Change user's avatar\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "update successfull",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Wrong token type | no file | not image"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "image/*": {
              "schema": {
                "type": "string",
                "format": "binar"
              }
            }
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "tags": ["contacts"],
        "summary": "get all user's contacts",
        "operationId": "getContacts",
        "description": "Get all user's contacts\n",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "Page number, default: 1"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "Per page value form 20 to 50, default: 20"
          },
          {
            "in": "query",
            "name": "favorite",
            "schema": {
              "type": "boolean"
            },
            "description": "get favorite/not favorite contacts"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "found contacts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contacts"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/TokenTypeError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "tags": ["contacts"],
        "summary": "adds contact",
        "operationId": "addContact",
        "description": "Creates new contact",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "contact created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "400": {
            "description": "Wrong token type | Missing required fields | Validation error"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewContact"
              }
            }
          },
          "description": "Contact to add"
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": ["contacts"],
        "summary": "get contact by id",
        "operationId": "getContactById",
        "description": "Get user's contact by id\n",
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "description": "contact's id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "found contact",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/TokenTypeError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/ContactNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "tags": ["contacts"],
        "summary": "delete contact by id",
        "operationId": "deleteContact",
        "description": "Deletes a contact by id",
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "description": "contact's id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "contact deleted id# {contactId}"
          },
          "400": {
            "$ref": "#/components/responses/TokenTypeError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/ContactNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "put": {
        "tags": ["contacts"],
        "summary": "update contact by id",
        "operationId": "updateContact",
        "description": "Updates a contact by id",
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "description": "contact's id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "contact updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "400": {
            "description": "Wrong token type | Missing fields | Validation error"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/ContactNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUpdatedContact"
              }
            }
          },
          "description": "Updated contact"
        }
      }
    },
    "/contacts/{contactId}/favorite": {
      "patch": {
        "tags": ["contacts"],
        "summary": "update favorite field",
        "operationId": "updateFavorite",
        "description": "Updates contact's favorite field by id",
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "description": "contact's id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "contact's favorite field updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          },
          "400": {
            "description": "Wrong token type | Missing required field favorite | Validation error"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "404": {
            "$ref": "#/components/responses/ContactNotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Favorite"
              }
            }
          },
          "description": "Updated contact's favorite field"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewUser": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          },
          "subscription": {
            "type": "string",
            "example": "starter"
          },
          "avatarURL": {
            "type": "string",
            "example": "https://s.gravatar.com/avatar/e1102c33ff44561b951fc9fde8350062"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "subscription": {
            "type": "string",
            "example": "starter"
          },
          "avatarURL": {
            "type": "string",
            "example": "https://s.gravatar.com/avatar/e1102c33ff44561b951fc9fde8350062"
          }
        }
      },
      "NewContact": {
        "type": "object",
        "required": ["name", "email", "phone"],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "example": "+38(050)111-11-11"
          },
          "favorite": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "NewUpdatedContact": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "example": "+38(050)111-11-11"
          },
          "favorite": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "620bd7c554c7112a78fd5bd3"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "example": "+38(050)111-11-11"
          },
          "favorite": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Contacts": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contact"
            }
          },
          "page": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "total_results": {
            "type": "integer"
          }
        }
      },
      "LogIn": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "Verify": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.doe@mail.com"
          }
        }
      },
      "Subscription": {
        "type": "object",
        "required": ["subscription"],
        "properties": {
          "subscription": {
            "type": "string",
            "example": "pro"
          }
        }
      },
      "Favorite": {
        "type": "object",
        "required": ["favorite"],
        "properties": {
          "favorite": {
            "type": "boolean",
            "example": true
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "NotFoundError": {
        "description": "Not found"
      },
      "ContactNotFoundError": {
        "description": "Contact not found"
      },
      "MissingError": {
        "description": "Missing fields"
      },
      "MissingReqError": {
        "description": "Missing required fields"
      },
      "MissingReqFavError": {
        "description": "Missing required field favorite"
      },
      "ValidationError": {
        "description": "Validation error"
      },
      "RegistrationError": {
        "description": "Email in use"
      },
      "AuthError": {
        "description": "Email or password is wrong"
      },
      "UnauthorizedError": {
        "description": "Not authorized"
      },
      "TokenTypeError": {
        "description": "Wrong token type"
      },
      "UserNotFoundError": {
        "description": "User not found"
      },
      "EmailError": {
        "description": "Can't send email"
      },
      "NotVerifiedError": {
        "description": "Please verify your email"
      },
      "VerificationError": {
        "description": "Verification has already been passed"
      },
      "ServerError": {
        "description": "Server error"
      }
    }
  }
}
